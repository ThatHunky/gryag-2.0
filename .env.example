# Telegram
TELEGRAM_BOT_TOKEN=your_token_here
BOT_TRIGGER_KEYWORDS=gryag,грягі,griag

# Admin Configuration
ADMIN_IDS=123456789,987654321

# LLM Configuration (OpenAI-compatible API)
LLM_API_KEY=your_api_key
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o
LLM_VISION_MODEL=gpt-4o
LLM_SUMMARIZATION_MODEL=gpt-4o-mini

# Reasoning Mode
LLM_REASONING_ENABLED=true
LLM_REASONING_EFFORT="medium" # low, medium, high

# Structured Output
LLM_STRUCTURED_OUTPUT=true
LLM_STRUCTURED_INPUT=false

# LLM Vision (Optional - for image understanding)
LLM_VISION_ENABLED=true
LLM_VISION_MODEL=""           # Defaults to LLM_MODEL if empty
LLM_VISION_BASE_URL=""        # Defaults to LLM_BASE_URL if empty
LLM_VISION_API_KEY=""         # Defaults to LLM_API_KEY if empty

# Context Settings
IMMEDIATE_CONTEXT_MESSAGES=100
RECENT_SUMMARY_TOKENS=1024
RECENT_SUMMARY_INTERVAL_DAYS=3
LONG_SUMMARY_TOKENS=4096
LONG_SUMMARY_INTERVAL_DAYS=14

# User Memory
USER_MEMORY_MAX_FACTS=50

# System Prompt
SYSTEM_PROMPT_FILE=default.md

# Access Control
ACCESS_MODE=global
WHITELIST_CHATS=
BLACKLIST_USERS=

# Rate Limiting (for non-admins)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PROMPTS=30
RATE_LIMIT_WINDOW_HOURS=1

# Moderation (DANGEROUS - disabled by default)
MODERATION_ENABLED=false

# Database
DATABASE_URL=postgresql+asyncpg://bot:bot@postgres:5432/gryag
REDIS_URL=redis://redis:6379/0

# Image Generation
IMAGE_GENERATION_ENABLED=true
IMAGE_GENERATION_MODEL=dall-e-3
IMAGE_GENERATION_BASE_URL=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./data/logs
LOG_FILE_RETENTION_DAYS=7

# Response Limits
LLM_MAX_RESPONSE_TOKENS=2048
CONTEXT_MAX_TOKENS=8000

# Reliability
LLM_FALLBACK_MODEL=
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=3

# UX Features
TYPING_INDICATOR_ENABLED=true
